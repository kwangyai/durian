       <root>
            <level value="ALL" />
            <appender-ref ref="APPLICATION_RollingLogFileAppender" />
            <!-- <appender-ref ref="DB_MS_ACCESS"/> -->
        </root>

        <logger name="ApplicationLog" additivity="false">
            <level value="ALL"/>
            <appender-ref ref="APPLICATION_RollingLogFileAppender"/>
            <!--  <appender-ref ref="DB_MS_ACCESS"/> -->
        </logger>
        
        <logger name="HardwareLog" additivity="false">
            <level value="ALL"/>
